<div class="navbar">
  <div class="logo-container">
    <a href="/"><img class="logo" src="/images/acebook_icn_wht.png" alt="LogoIcon"></a>
  </div>
  <div class="link-container">
    <img class="profpic" src="/images/blank_profile.jpg" alt="Avatar">
    <a class="link" href="/user/{{loggedInUser.id}}">Hello, {{loggedInUser.firstName}}!</a>
    <a class="link" href="/user/requests">Friend requests</a>
    <a class="link" href="/user">Users</a>
    <a class="link" href="/user/logout">Log Out</a>
    <a href="/" class="logo"></a>

</div>
</div>

<div class="backgroundimage"> 
    <img class = "profilePic" src="../images/blank_profile.jpg" alt="profile pic">
    <div class="form-container">
        <form action="/user/add" method="POST">
            <input type="hidden" name="userId" value="{{user.id}}">
            <input id="submit-button" class="add-friend-{{friendStatus.status}}" type="submit" value="Add Friend +">
        </form>
    </div>
</div>

<p> {{user.firstName}} {{user.surname}} - {{friendStatus.status}}</p> 
    <div class="posts">
    {{#each posts}}
    <div class="postCard"><p>{{message}}</p></div>
    {{/each}}
    </div>

{{#if isFriends}}
<p>You are friends.</p>
{{else if isSelf}}
<p>This is you!</p>
{{else }}
<form action="/user/add" method="POST">
    <input type="hidden" name="userId" value="{{user.id}}">
    <input id="submit-button" type="submit" value="Add Friend">
</form>
{{/if}}


